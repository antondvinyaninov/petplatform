# Main Backend Configuration

# Database Configuration
# Для локальной разработки используй SQLite (закомментируй DATABASE_URL)
# Для production используй PostgreSQL (раскомментируй DATABASE_URL)

# PostgreSQL (Production)
DATABASE_URL=postgres://postgres_zp:7da0905cd3349f58f368@my_projects_bd_zooplatforma:5432/bd_zp?sslmode=disable

# Или используй отдельные переменные:
# DB_HOST=my_projects_bd_zooplatforma
# DB_PORT=5432
# DB_USER=postgres_zp
# DB_PASSWORD=7da0905cd3349f58f368
# DB_NAME=bd_zp
# DB_SSLMODE=disable

# Auth Service Configuration
AUTH_SERVICE_URL=http://localhost:7100

# JWT Secret (используется для подписи токенов)
JWT_SECRET=your-secret-key-here-change-in-production

# Server Configuration
PORT=8000
ENVIRONMENT=development
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
MAX_UPLOAD_SIZE=104857600
UPLOAD_DIR=./uploads

# S3 Storage Configuration (FirstVDS)
# Установи USE_S3=true для использования S3 вместо локального хранилища
USE_S3=false
S3_ENDPOINT=https://s3.firstvds.ru
S3_REGION=ru-1
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_CDN_URL=https://your-bucket-name.s3.firstvds.ru
# Или если используешь кастомный домен:
# S3_CDN_URL=https://cdn.yourdomain.com
